#!/bin/sh
# lazypaw pre-commit hook: format + lint check

set -e

echo "ğŸ¾ Running cargo fmt..."
cargo fmt -- --check 2>/dev/null
if [ $? -ne 0 ]; then
    echo "âŒ cargo fmt failed. Run 'cargo fmt' and try again."
    exit 1
fi

echo "ğŸ¾ Running cargo clippy..."
cargo clippy --release -- -D warnings 2>/dev/null
if [ $? -ne 0 ]; then
    echo "âŒ cargo clippy failed. Fix warnings and try again."
    exit 1
fi

echo "âœ… Pre-commit checks passed."
